{
	"settings": {
		"number_of_shards": 5,
		"number_of_replicas": 1,
		"analysis": {
			"filter": {
				"english_stop": {
					"type":				"stop",
					"stopwords":	"_english_"
				},
				"english_stemmer": {
					"type":				"stemmer",
					"language":		"english"
				},
				"possibly_stop": {
					"type":				"stop",
					"stopwords":	["possibly"]
				}
			},
			"analyzer": {
				"html": {
					"type": "custom",
					"tokenizer": "standard",
					"char_filter": "html_strip",
					"filter": [
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				},
				"folding_html": {
					"tokenizer": "standard",
					"char_filter": "html_strip",
					"filter": [
						"lowercase",
						"asciifolding",
						"english_stop",
						"english_stemmer"
					]
				},
				"text": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"english_stop"
					]
				},
				"text_possibly": {
					"type": "custom",
					"tokenizer": "keyword",
					"filter": [
						"lowercase",
						"possibly_stop"
					]
				},
				"stemming": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				},
				"folding": {
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"asciifolding"
					]
				},
				"stemming_folding": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"english_stop",
						"english_stemmer",
						"asciifolding"
					]
				}
			}
		}
	},
	"mappings": {
		"meta": {
			"properties":{
				"hasImportedCSV": { "type": "boolean", "index": false, "include_in_all": false },
				"lastCSVImportTimestamp": { "type": "long", "index": false, "include_in_all": false }
			}
		},
		"object": {
			"dynamic": true,
			"properties": {
				"bibliography": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" },
						"folded": {
							"type": "text",
							"analyzer": "folding"
						}
					}
				},
				"classification": {
					"type": "keyword"
				},
				"color": {
					"properties": {
						"reference-closest": { "type": "keyword" },
						"average-color": { "type": "keyword" },
						"average-closest": { "type": "keyword" },
						"palette-closest-0": { "type": "keyword" },
						"palette-color-0": { "type": "keyword" },
						"palette-closest-1": { "type": "keyword" },
						"palette-color-1": { "type": "keyword" },
						"palette-closest-2": { "type": "keyword" },
						"palette-color-2": { "type": "keyword" },
						"palette-closest-3": { "type": "keyword" },
						"palette-color-3": { "type": "keyword" }
					}
				},
				"copyright": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"creditLine": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"culture": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"dimensions": {
					"type": "keyword",
					"index": false
				},
				"displayDate": {
					"type": "text",
					"analyzer": "keyword",
					"index": false
				},
				"ensembleIndex": {
					"type": "keyword",
					"include_in_all": false
				},
				"exhHistory": {
					"type": "text",
					"fields": {
						"text": {
							"type": "text",
							"analyzer": "stemming"
						},
						"folded": {
							"type": "text",
							"analyzer": "folding"
						}
					}
				},
				"highlight": {
					"type": "boolean"
				},
				"id": {
					"type": "long"
				},
				"invno": {
					"type": "keyword"
				},
				"locations": {
					"type": "keyword",
					"index": false
				},
				"longDescription": {
					"type": "text",
					"fields": {
						"text": {
							"type": "text",
							"analyzer": "html"
						},
						"folded": {
							"type": "text",
							"analyzer": "folding_html"
						}
					}
				},
				"medium": {
					"type": "text",
					"fields": {
						"text": {
							"type": "text",
							"analyzer": "text"
						}
					}
				},
				"objRightsTypeId": {
					"type": "long"
				},
				"onView": {
					"type": "boolean"
				},
				"people": {
					"type": "text",
					"fields": {
						"text": { "type": "keyword" },
						"folded": {
							"type": "text",
							"analyzer": "folding"
						}
					}
				},
				"period": {
					"type": "text",
					"analyzer": "text_possibly"
				},
				"room": {
					"type": "keyword"
				},
				"shortDescription": {
					"type": "text",
					"fields": {
						"text": {
							"type": "text",
							"analyzer": "html"
						},
						"folded": {
							"type": "text",
							"analyzer": "folding_html"
						}
					}
				},
				"provenance": { "type": "text" },
				"tags": {
					"properties": {
						"tag": {
							"type": "text",
							"fields": {
								"raw": { "type": "keyword" },
								"stemmed": {
									"type": "text",
									"analyzer": "stemming"
								}
							}
						},
						"confidence": {
							"type": "float"
						},
						"category": {
							"type": "text",
							"fields": {
								"raw": { "type": "keyword" },
								"stemmed": {
									"type": "text",
									"analyzer": "stemming"
								}
							}
						}
					}
				},
				"title": {
					"type": "text",
					"fields": {
						"raw": {
							"type": "keyword"
						},
						"folded": {
							"type": "text",
							"analyzer": "folding"
						}
					}
				},
				"wall": {
					"type": "keyword"
				},
				"visualDescription": {
					"type": "text",
					"fields": {
						"text": {
							"type": "text",
							"analyzer": "html"
						},
						"folding": {
							"type": "text",
							"analyzer": "folding_html"
						}
					}
				},
				"imageSecret": {
					"type": "keyword"
				},
				"imageOriginalSecret": {
					"type": "keyword"
				}
			}
		}
	}
}
