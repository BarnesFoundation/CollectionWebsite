{
	"settings": {
		"number_of_shards": 5,
		"number_of_replicas": 1,
		"analysis": {
			"filter": {
				"english_stop": {
					"type":				"stop",
					"stopwords":	"_english_"
				},
				"english_stemmer": {
					"type":				"stemmer",
					"language":		"english"
				},
				"period_stop": {
					"type":				"stop",
					"stopwords":	["possibly"]
				}
			},
			"analyzer": {
				"html_description_analyzer": {
					"type": "custom",
					"char_filter": "html_strip",
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				},
				"lowercase_keyword_analyzer": {
					"type": "custom",
					"tokenizer": "keyword",
					"filter": [
						"lowercase"
					]
				},
				"medium_analyzer": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"english_stop"
					]
				},
				"period_analyzer": {
					"type": "custom",
					"tokenizer": "keyword",
					"filter": [
						"lowercase",
						"period_stop"
					]
				},
				"text_description_analyzer": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				}
			}
		}
	},
	"mappings": {
		"meta": {
			"properties":{
				"hasImportedCSV": { "type": "boolean", "index": false, "include_in_all": false },
				"lastCSVImportTimestamp": { "type": "long", "index": false, "include_in_all": false }
			}
		},
		"object": {
			"dynamic": true,
			"properties": {
				"bibliography": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword", "store": true }
					}
				},
				"classification": { "type": "keyword" },
				"color": {
					"dynamic": false,
					"properties": {
						"reference-closest": { "type": "keyword" },
						"average-color": { "type": "keyword" },
						"average-closest": { "type": "keyword" },
						"palette-closest-0": { "type": "keyword" },
						"palette-color-0": { "type": "keyword" },
						"palette-closest-1": { "type": "keyword" },
						"palette-color-1": { "type": "keyword" },
						"palette-closest-2": { "type": "keyword" },
						"palette-color-2": { "type": "keyword" },
						"palette-closest-3": { "type": "keyword" },
						"palette-color-3": { "type": "keyword" }
					}
				},
				"copyright": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"creditLine": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"culture": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"dimensions": { "type": "keyword", "index": false },
				"displayDate": {
					"type": "text",
					"analyzer": "keyword",
					"index": false
				},
				"ensembleIndex": {
					"type": "text"
				},
				"exhHistory": {
					"type": "text",
					"fields": {
						"text": { "type": "text", "analyzer": "text_description_analyzer" }
					}
				},
				"highlight": { "type": "boolean" },
				"id": { "type": "long" },
				"invno": { "type": "keyword" },
				"locations": { "type": "keyword", "index": false },
				"longDescription": {
					"type": "text",
					"fields": {
						"text": { "type": "text", "analyzer": "html_description_analyzer" }
					}
				},
				"medium": {
					"type": "text",
					"fields": {
						"text": { "type": "text", "analyzer": "medium_analyzer" }
					}
				},
				"objRightsTypeId": { "type": "long" },
				"onView": { "type": "boolean" },
				"people": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"period": {
					"type": "text",
					"analyzer": "period_analyzer"
				},
				"room": { "type": "keyword" },
				"shortDescription": {
					"type": "text",
					"fields": {
						"text": { "type": "text", "analyzer": "html_description_analyzer" }
					}
				},
				"provenance": { "type": "text" },
				"title": {
					"type": "text",
					"fields": {
						"keyword": { "type": "keyword" }
					}
				},
				"tags_1": {
					"type": "nested",
					"properties": {
						"tag": { "type": "text" },
						"confidence": { "type": "float" }
					}
				},
				"tags_2": {
					"type": "nested",
					"properties": {
						"tag": { "type": "text" },
						"confidence": { "type": "float" }
					}
				},
				"wall": { "type": "keyword" },
				"visualDescription": {
					"type": "text",
					"fields": {
						"text": { "type": "text", "analyzer": "html_description_analyzer" }
					}
				},
				"imageSecret": { "type": "keyword" },
				"imageOriginalSecret": { "type": "keyword" }
			}
		}
	}
}
